<!DOCTYPE html>
<html ng-app="sitec">
<head>
  <% include ../partials/header.ejs %>
</head>

  <body class="bg-dark-gray"  ng-controller="Controller as ct" ng-cloak>


    <div id="page-wrapper container">

    <div class="col-md-8 col-md-offset-2">
      <form class="form-group" ng-submit="submit()" ng-controller="AddController">
        <label for="title">Title: </label>
        <input type="text" placeholder="Enter Title" ng-model="title" class="form-control" id="title">

        <label for="title">Tags: </label>

        <div class="row">
          <div class="col-md-4"><input type="text" ng-model="text"  class="form-control"></div>
          <button type="button" for="text" ng-click="addtag()" class="btn btn-default"> Add </button>
        </div>

        <button type="button" ng-click="removetag(tag)" class="btn btn-default btn-sm" ng-repeat="tag in taglist">
            {{tag}}
        </button>

        <br>
        <label for="descr">Description: </label>
        <textarea class="form-control" ng-model="question" rows="5" id="comment"></textarea>

        <br>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>

    </div>

  </body>
</html>
